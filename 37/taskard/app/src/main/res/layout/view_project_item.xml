<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/primary"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:layout_height="200dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_project"
        android:layout_margin="16dp"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/projectNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:layout_gravity="center|start|top"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="64dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Project's name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/actionsButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/icon_dots_vertical"
        android:backgroundTint="@color/white"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"/>

</androidx.cardview.widget.CardView>